@model PUBG.Models.Posted

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Control/Views/Shared/_Layout.cshtml";
}



<h3>Silmək istədiyinizdən əminsiniz?</h3>
<div>
    <h4>Oyuncu xalı</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Paylaşdığı tarix
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            Şəkil
        </dt>
        <dd class = "col-sm-10">
            <img src="/images/@Model.ImagePath" width="150" />
        </dd>
        <dt class = "col-sm-2">
            Xal
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Point)
        </dd>
        <dt class = "col-sm-2">
           Oyuncu adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.PubgUsername)
        </dd class>
        <dt class = "col-sm-2">
           Sezon adı
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Season.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
