@model PUBG.Areas.Control.Models.EditGalleryPhoto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Control/Views/Shared/_Layout.cshtml";
}

<h1>Redaktə</h1>

<h4>Qalereya</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistPhotoPath" />
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control" type="file" name="Photo" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri qayid</a>
</div>

