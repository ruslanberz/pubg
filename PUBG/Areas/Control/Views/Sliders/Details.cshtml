@model PUBG.Models.Slider

@{
    ViewData["Title"] = "İnfo";
    Layout = "~/Areas/Control/Views/Shared/_Layout.cshtml";
}



<div>
    <h4>Slider info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Başlıq
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Mətn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
           Şəkil
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.Photo" width="150"/>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Redaktə</a> |
    <a asp-action="Index">Geri</a>
</div>
