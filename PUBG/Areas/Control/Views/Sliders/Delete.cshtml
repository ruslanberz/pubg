@model PUBG.Models.Slider

@{
    ViewData["Title"] = "Sil";
    Layout = "~/Areas/Control/Views/Shared/_Layout.cshtml";
}



<h3>Silmək istədiyinizdən əminsiniz?</h3>
<div>
    <h4>Sil</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Başlıq
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
         Mətn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
           Şəkil
        </dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.Photo" width="150"/>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Geri</a>
    </form>
</div>
