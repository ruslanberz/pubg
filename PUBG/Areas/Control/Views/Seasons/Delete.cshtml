@model PUBG.Models.Season

@{
    ViewData["Title"] = "Sezon silmə";
    Layout = "~/Areas/Control/Views/Shared/_Layout.cshtml";
}



<h3>Silmək istədiyinizdən əminsiniz?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Başlama vaxtı
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            Bitmə vaxtı
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            Sezon adı
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Aktiv
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Geri</a>
    </form>
</div>
