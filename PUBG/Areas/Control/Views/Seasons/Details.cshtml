@model PUBG.Models.Season

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Control/Views/Shared/_Layout.cshtml";
}

<h1></h1>

<div>
    <h4>Sezon</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Başlama vaxtı
        </dt>
        <dd class="col-sm-10">
            @Model.StartTime.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            Bitmə vaxtı
        </dt>
        <dd class="col-sm-10">
            @Model.EndTime.ToString("dd-MM-yyyy")
        </dd>
        <dt class="col-sm-2">
            Sezo adı
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Aktiv
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Geri</a>
</div>
